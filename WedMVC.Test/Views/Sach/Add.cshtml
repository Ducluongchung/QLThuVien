
@model WebMVC.Model.Sach
@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Thêm mới Sách
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="#">Tài khoản</a></li>
        <li class="active">Thêm mới</li>
    </ol>
</section>
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Thêm mới Sách</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" novalidate role="form" action="@Url.Action("Add","Sach")" method="post">
            <div class="box-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Tên sách</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Tác giả</label>
                    <div class="col-sm-3">
                        @Html.DropDownListFor(model => model.IdTacGia, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdTacGia, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Nhà xuất bản</label>
                    <div class="col-sm-3">
                        @Html.DropDownListFor(model => model.IdNXB, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdNXB, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Chủ đề</label>
                    <div class="col-sm-3">
                        @Html.DropDownListFor(model => model.IdChuDe, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdChuDe, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Số lượng</label>
                    <div class="col-sm-2">
                        <input type="number" class="form-control" name="SoLuong">
                    </div>
                </div>
                
            </div><!-- /.box-body -->
            <div class="box-footer">
                <button class="btn btn-default">Hủy</button>
                <button type="submit" class="btn btn-success pull-right">Lưu</button>
            </div><!-- /.box-footer -->
        </form>
    </div><!-- /.box -->
</section>

